//Exercise 3
const size = 8;
let chessboard = "";

for(let i = 0; i < size; i++){ 
  if(i % 2 == 0) chessboard+= " ";
   for(let j = 0; j < size; j++){
     chessboard += (j % 2 == 0) ? "#" : " ";
  }
  chessboard += "\n";
}


